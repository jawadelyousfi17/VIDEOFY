generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  presets     Preset[]
  ttsTasks    TTSTask[]
  savedVoices SavedVoice[]
}

model Preset {
  id   String @id @default(uuid())
  name String

  userId String
  user   User   @relation(fields: [userId], references: [id])

  links InspirationLink[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model InspirationLink {
  id        String  @id @default(uuid())
  url       String
  title     String?
  thumbnail String?

  presetId String
  preset   Preset @relation(fields: [presetId], references: [id], onDelete: Cascade)
}

model TTSTask {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  prompt  String
  voiceId String
  status  String @default("PENDING") // PENDING, PROCESSING, COMPLETED, FAILED

  audioUrl String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SavedVoice {
  id      String @id @default(uuid())
  name    String
  voiceId String // The ID from Fish Audio

  userId String
  user   User   @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, voiceId])
}
